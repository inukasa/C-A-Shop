        <div class="Device_Table_Position">
            <h3>Bảng tài khoản khách hàng</h3>
            <table class="Table">
                <caption>Tài khoản hoạt động</caption>
                <thead>
                    <tr>
                        <th>
                            Tên tài khoản
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.notBanUserCustomer)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            @Html.ActionLink("Ngưng hoạt động", "Ban", new { id = item.userID, status = "Inactive" }) 
