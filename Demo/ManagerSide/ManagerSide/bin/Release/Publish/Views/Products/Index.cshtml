@model ManagerSide.Models.CommonModel

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- CSS file from w3school -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>C&A</title>
    <link rel="stylesheet" type="text/css" href="~/Css_Management/TopBarandSideBar.css">
    <link rel="stylesheet" type="text/css" href="~/Css_Management/BodyandFont.css">
    @*<link rel="stylesheet" type="text/css" href="~/Css_Management/ManagementProduct.css">*@
    <link rel="stylesheet" type="text/css" href="~/Css_Management/inputFormProduct.css">
    <style>
        .Main-Content
{
	margin-top: 1%;
	margin-left: 22%;
	max-width: 100%;
	min-height: fit-content;
}

.AddButton a
{
	text-decoration: none;
	color: var(--red);
	font-size: 20px;

}

.AddButton a:hover
{
	text-decoration: none;
	color: var(--red);
}

.Table {
    margin-top: 10px;   
    width: 90%;
    box-shadow: 1px 2px 4px rgba(0, 0, 0, 0.5);
    padding: 10px;
    background: white;
    float: left;
}


.Table table {
        table-layout: fixed;
}

.Table th, td {
        text-transform: capitalize;
        text-align: center;
        width: 100px;
        padding: 5px 10px;
}

.Table thead {
        background: #f9f9f9;
        display: table;
        width: 100%;
        width: calc(100% - 16px);
}

.Table th {
        background-color: var(--red);
        color: white;
}

.Table tbody {
        max-height: 520px;
        overflow: auto;
        display: block;
        width: 100%;
}

.Table tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
}

.Table tr:nth-child(even) {
        background-color: #f2f2f2;
}

.Table tr:hover {
        background-color: #ddd;
}

/** ------------ **/

/** End **/

.footer
{
	width: 100%;
	height: 50px;
	display: flex;
}
    </style>
</head>
<body>
    @Html.Raw(ViewBag.ErrorMessege)
    <div class="Main-Content">
        <div class="AddButton">@Html.ActionLink("Tạo mới", "Create")</div>
        <div class="AddButton">
            @Html.ActionLink("Thêm giá sản phẩm", "EditProductPrice")
        </div>
        <table class="Table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    
                    <th>Kích cỡ</th>
                    <th>Màu</th>
                    <th>Giá Bán</th>
                    <th>Trang thái</th>
                    <th>Loại sản phẩm</th>
                    <th>Nhà cung cấp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.activeProduct)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.productColor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.exportPrice)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.productStatus)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SubCategory.subcategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Supplier.supplierName)
                    </td>
                    <td>
                        @Html.ActionLink("Ngừng bán", "Active", new { id = item.productID, status = "Inactive" }) |
                        @Html.ActionLink("Sửa", "Edit", new { id = item.productID })
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <table class="Table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Kích cỡ</th>
                    <th>Màu</th>
                    <th>Giá Bán</th>
                    <th>Trang thái</th>
                    <th>Loại sản phẩm</th>
                    <th>Nhà cung cấp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.inactiveProduct)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.productName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.productSize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.productColor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.exportPrice)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.productStatus)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory.subcategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier.supplierName)
                        </td>
                        <td>
                            @Html.ActionLink("Bán", "Active", new { id = item.productID, status = "Active" }) |
                            @Html.ActionLink("Sửa", "Edit", new { id = item.productID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="footer"></div>
</body>
</html>
