@model ManagerSide.Models.CommonModel

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- CSS file from w3school -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Css_Management/ManagementInventory.css">
    <link rel="stylesheet" type="text/css" href="~/Css_Management/TopBarandSideBar.css">
    <link rel="stylesheet" type="text/css" href="~/Css_Management/BodyandFont.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <title>C&A</title>
</head>
<body>
    @Html.Raw(ViewBag.ErrorMessege)
    <div class="Main-Content">
        <div class="AddButton">
            @Html.ActionLink("Thêm loại sản phẩm", "Create")
        </div>
        <div class="AddButton">
            @Html.ActionLink("Phân loại sản phẩm", "EditProductCategory")
        </div>
        <div class="AddButton">
            @Html.ActionLink("Nhập hàng", "ImportShipmentCreate")
        </div>

        <div class="title_table"><h3>Số lượng hàng còn lại trong kho</h3></div>
        <table class="Table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Loại sản phẩm</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.restOfProduct)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.productName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.productQuantity)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Product.SubCategory.subcategoryName)</td>
                        @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.productID })
                        </td>*@

                    </tr>
                }
            </tbody>
        </table>
        <div class="title_table"><h3>Số lượng hàng bán được</h3></div>
        <table class="Table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.productSold)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Key)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="title_table"><h3>Các loại hàng</h3></div>
        <table class="Table">
            <thead>
                <tr>
                    <th>Tên Loại hàng</th>
                    <th>Loại sản phẩm chính</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.subCategories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.subcategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.categoryName)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "EditSubCategory", new { id = item.subcategoryID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="footer"></div>

</body>
</html>
