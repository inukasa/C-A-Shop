                                            <ul class="dropdown-content">
                                                @foreach (SubCategory sc in listSC1)
                                                {
                                                    <li>@Html.ActionLink("" + sc.subcategoryName, "Cate", "Products", new { id = sc.subcategoryID }, null)</li>
